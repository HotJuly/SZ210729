.indexContainer .header {
/*
			使用padding替代margin
				1.不能有边框
				2.不能有背景颜色
		*/
  padding-top: 20rpx;
  display: flex;
  align-items: center;
}
.indexContainer .header .logo {
  width: 118rpx;
  height: 40rpx;
  margin: 0 20rpx;
  flex-shrink: 0;
}
.indexContainer .header .search {
  position: relative;
  background-color: #ccc;
  flex-grow: 1;
  border-radius: 10rpx;
  height: 60rpx;
  padding-left: 60rpx;
}
.indexContainer .header .search .searchInput {
  height: 100%;
}
.indexContainer .header .search .searchInput .placeholder {
  text-align: center;
  font-size: 24rpx;
  text-indent: -60rpx;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.indexContainer .header .username {
  width: 140rpx;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  color: #f00;
  margin: 0 20rpx;
  flex-shrink: 0;
}
.indexContainer .navScroll {
  white-space: nowrap;
}
.indexContainer .navScroll .navItem {
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
}
.indexContainer .navScroll .navItem.active {
  border-bottom: 4rpx solid #f00;
}

