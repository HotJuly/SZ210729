<!--index.wxml-->
<view class="indexContainer">
  <swiper 
  class="bannerSwiper"
  circular
  indicator-dots
  indicator-active-color="#d43c33"
  >
    <!-- <swiper-item 
    class="bannerItem"
    v-for="(item,index) in banners"
    :key="item.bannerId"
    > -->
    
    <swiper-item 
    class="bannerItem"
    wx:for="{{banners}}"
    wx:for-item="banner"
    wx:for-index="myIndex"
    wx:key="bannerId"
    >
      <image class="bannerImg" src="{{banner.pic}}"></image>
    </swiper-item>
  </swiper>

  <!-- 导航区域结构 -->
  <view class="nav">
    <view class="navItem">
      <view class="iconfont icon-meirituijian-"></view>
      <view class="navTitle">每日推荐</view>
    </view>
    <view class="navItem">
      <view  class="iconfont icon-gedan1"></view>
      <view class="navTitle">歌单</view>
    </view>
    <view class="navItem">
      <view  class="iconfont icon-icon-ranking"></view>
      <view class="navTitle">排行榜</view>
    </view>
    <view class="navItem">
      <view  class="iconfont icon-diantai"></view>
      <view class="navTitle">电台</view>
    </view>
    <view class="navItem">
      <view  class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></view>
      <view class="navTitle">直播</view>
    </view>
  </view>

  <!-- 推荐歌曲区域结构 -->
  <view class="recommendContainer">
    <view class="header">
      <view class="title">推荐歌曲</view>
      <view class="moreContent">
        <view class="moreTitle">为你精心推荐</view>
        <view class="more">查看更多</view>
      </view>
    </view>

    <scroll-view 
    class="recommendScroll"
    enable-flex
    scroll-x
    >
      <view 
      class="recommendItem"
      wx:for="{{recommendList}}"
      wx:key="id"
      >
        <image class="recommendImg" src="{{item.picUrl}}"></image>
        <view class="title">{{item.name}}</view>
      </view>
    </scroll-view>
  </view>
</view>